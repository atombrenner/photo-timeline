{
  "name": "photo-timeline",
  "repository": "",
  "license": "GPL-3.0-or-later",
  "bin": {
    "ingest": "./bin/ingest.ts",
    "reindex": "./bin/reindex.ts",
    "stats": "./bin/stats.ts"
  },
  "scripts": {
    "start": "cd webapp && vite",
    "build:webapp": "cd webapp && vite build",
    "tsc": "tsc --build lib server bin && tsc -p webapp",
    "build": "rm -rf build && npm run build:webapp && npm run build:server",
    "test": "vitest --dir webapp/src --globals",
    "test:ci": "npm -w lib run test:ci && vitest --run --dir webapp --globals --reporter basic --reporter junit --outputFile webapp/junit.xml",
    "--server--": "",
    "server": "ts-node-dev -T -P server/tsconfig.json server/index.ts",
    "build:server": "esbuild --bundle --minify --keep-names --target=node18 --platform=node --outfile=./server/build/server.js server/index.ts",
    "--bundle--": "",
    "deploy:clean": "rm -rf \"$MY_MEDIA/photo-timeline/\"",
    "deploy:webapp": "cp -r ./webapp/dist \"$MY_MEDIA/photo-timeline\"",
    "deploy:server": "cp ./server/build/server.js \"$MY_MEDIA/photo-timeline/\"",
    "deploy": "[[ \"$MY_MEDIA\" ]] && npm run build && npm run deploy:clean && npm run deploy:webapp && npm run deploy:server || echo '$MY_MEDIA not defined'"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@preact/signals": "^1.1.3",
    "date-fns": "^2.21.1",
    "fs-extra": "^11.1.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "^0.0.16",
    "koa-static": "^5.0.0",
    "preact": "^10.14.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@testing-library/preact": "^3.2.3",
    "@tsconfig/node20": "^1.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/koa": "^2.13.1",
    "@types/koa__cors": "^4.0.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^20.2.5",
    "esbuild": "^0.17.19",
    "prettier": "^2.8.8",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.8",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "lib"
  ]
}
