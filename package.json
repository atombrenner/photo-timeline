  "bin": {
    "ingest": "./bin/ingest.ts",
    "reindex": "./bin/reindex.ts",
    "stats": "./bin/stats.ts"
  },
  "scripts": {
    "start": "cd webapp && vite",
    "build:webapp": "cd webapp && vite build",
    "deploy": "npm run build && rm -rf /home/christian/Data/MyMedia/Photos/_app_ && cp -r build /home/christian/Data/MyMedia/Photos/_app_",
    "tsc": "tsc --build lib server && tsc -p webapp",
    "build": "npm run build:webapp && npm run build:server",
    "test": "vitest --dir webapp/src --globals",
    "test:ci": "npm -w lib run test:ci && vitest --run --dir webapp --globals --reporter basic --reporter junit --outputFile webapp/junit.xml",
    "--server--": "",
    "server": "ts-node-dev -T -P server/tsconfig.json server/index.ts",
    "build:server": "esbuild --bundle --minify --keep-names --target=node18 --platform=node --outfile=build/server.js server/index.ts"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@preact/signals": "^1.1.3",
    "date-fns": "^2.21.1",
    "fs-extra": "^11.1.1",
