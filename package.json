    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "preact": "^10.13.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@testing-library/preact": "^3.2.3",
    "@tsconfig/node18": "^1.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/koa": "^2.13.1",
    "@types/koa__cors": "^4.0.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "esbuild": "^0.17.16",
    "prettier": "^2.8.8",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vitest": "^0.31.0"
  },
  "workspaces": [
    "lib"
  ]
}
